<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="48dp"
        android:text="Choose Search Option"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_search_med"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_search_doctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:text="Doctors"
        app:layout_constraintStart_toStartOf="@+id/button_search_med"
        app:layout_constraintTop_toBottomOf="@+id/button_search_med" />

    <Button
        android:id="@+id/button_search_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:text="Medication"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>