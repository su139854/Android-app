<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".personal_info_view"
    >

    <TextView
        android:id="@+id/Named"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Pulse Rate:  "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Aged"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_below="@id/Named"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Blood Pressure:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Heightd"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_below="@id/Aged"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Glucose Level:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/weightd"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_below="@id/Heightd"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Cholestrol Level:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Genderd"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_below="@id/weightd"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Body Temperature:"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/Age"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/Name"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/Aged"
        android:gravity="fill_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/Height"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/Age"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@id/Heightd"
        android:gravity="fill_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@id/Named"
        android:gravity="fill_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/Gender"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/weightd"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="-91dp"
        android:layout_toRightOf="@id/Genderd"
        android:gravity="fill_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/Weight"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/Height"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="97dp"
        android:layout_toRightOf="@id/weightd"
        android:gravity="fill_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="36sp" />

    <Button
        android:id="@+id/Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Genderd"
        android:layout_marginStart="-100dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/Named"
        android:background="@color/purple_200"
        android:text="Return" />

</RelativeLayout>